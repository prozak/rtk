grammar 'Grammar';

Grammar = 'grammar' str Rules;

Rules = Rule *;
Rule = id '=' Clauses ';';
Clauses = Clause *~ '|' ;

Clause = ClauseItem * ;

ClauseItem = id | str ;
id = [a-zA-Z][A-Za-z0-9_]* ;
String: str = ["] .* ["];
Ignore: ws = [ \t\n]*;

