grammar 'Grammar';

Grammar = 'grammar' str Rule*;

Rule = id '=' Clause';'
     | id ':' id '=' Clause';'
     | id '.' id ':' id '=' Clause';'
     | '.' id ':' id '=' Clause';';

Clause = Clause2 * ~'|';

Clause: Clause2 = Clause3 *;

Clause: Clause3 = '(' Clause ')'
                | ',' Clause4 
                | '!' Clause4
                | Clause4;

Clause: Clause4 = Clause5 '*' OptDelim
                | Clause5 '+' OptDelim
                | Clause5 '?'
                | Clause5;

Clause: Clause5 = id
                | str
                | '.'
                | regexplit;

OptDelim = ('~' Clause5)? ;

id = [a-zA-Z][A-Za-z0-9_]* ;
String: str = ["] .* ["];
String: regexplit = '[' .* ']';
Ignore: ws = [ \t\n]*;

