grammar 'Grammar';

imports """
import Data.List
import qualified Data.Map as M
"""

Grammar = 'grammar' StrLit ';' RuleList ;

RuleList = Rule *;

@shortcuts(r)
Rule = OptionList Rule1
     | ,Rule1 ;

Rule: Rule1 = Name '=' Clause ';' 
            | Name ':' Name '=' Clause ';'
            | Name '.' Name ':' Name '=' Clause ';'
            | '.' Name ':' Name '=' Clause ';' ;

OptionList = Option+ ;

Option = '@shortcuts' '(' IdList ')' ;

IdList = Name* ~ ',' ;

@shortcuts(cl)
Clause = Clause '|' Clause2
         | ,Clause2;

Clause: Clause2 = Clause2 Clause3
                  | ,Clause3 ;

Clause: Clause3 = ',' Clause4 
                | '!' Clause4
                | ,Clause4 ;

Clause: Clause4 = Clause5 '*' OptDelim
                | Clause5 '+' OptDelim
                | Clause5 '?'
                | ,Clause5 ;

Clause: Clause5 = '(' ,Clause ')'
                | Name
                | StrLit
                | '.'
                | regexplit ;

OptDelim = ('~' Clause5)? ;

StrLit = str ;
Name = id ;

id = [a-zA-Z][A-Za-z0-9_]* ;
str = '\'' ([^'] | '\\\'')* '\'' ;
regexplit = '[' ([^\]] | '\\]')* ']' ;
Ignore: ws = [ \t\n]+ ;
Ignore: comment = '#' .* '\n' ;
Ignore: comment1 = '/*' ([^\r]|[^\n]|.)* '*/';

